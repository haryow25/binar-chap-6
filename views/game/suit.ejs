  <body>
    <div class="container">
      <div class="top-menu">
        <a href="/home"><i class="fa-solid fa-chevron-left"></i> </a>
        <img src="./img/logo 1.png" alt="" />
        <p>ROCK PAPER SCISSORS</p>
      </div>

      <div class="row">
        <div class="col-4 top">
          <p>PLAYER 1</p>
          <div id="img-player">
            <img src="./img/batu.png" alt="" class="img-fluid batu cursor p-3 rounded" id="batu" />
            <img src="./img/gunting.png" alt="" class="img-fluid gunting cur p-3sor p-3 rounded" id="gunting" />
            <img src="./img/kertas.png" alt="" class="img-fluid kertas curs p-3or p-3 rounded" id="kertas" />
          </div>
        </div>
        <div class="col-4 middle">
          <img src="./img/VS.png" alt="" id="result-img" />
        </div>
        <div class="col-4 bottom">
          <p>Computer</p>
          <div id="img-comp">
            <img src="./img/batu.png" alt="" class="img-fluid rounded p-3" id="comp-batu" />
            <img src="./img/gunting.png" alt="" class="img-fluid rounded p-3" id="comp-gunting" />
            <img src="./img/kertas.png" alt="" class="img-fluid rounded p-3" id="comp-kertas" />
          </div>
        </div>
      </div>

      <div class="refresh">
        <img src="./img/refresh.png" alt="" class="img-fluid" />
      </div>
    </div>

